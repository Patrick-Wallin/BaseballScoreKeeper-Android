<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.patrickwallin.android.baseballscorekeeper.MainActivity"
    android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team_a_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TeamTitle"
                        android:text="Team A" />

                    <TextView
                        android:id="@+id/team_a_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TeamScore"
                        android:text="0" />

                    <Button
                        android:id="@+id/run_team_a_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:onClick="addRun"
                        android:text="Run"
                        android:enabled="true"/>

                    <Button
                        android:id="@+id/out_team_a_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:onClick="addOut"
                        android:text="Out"
                        android:enabled="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical"
                    tools:context="com.patrickwallin.android.baseballscorekeeper.MainActivity">

                    <TextView
                        android:id="@+id/team_b_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TeamTitle"
                        android:text="Team B" />

                    <TextView
                        android:id="@+id/team_b_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TeamScore"
                        android:text="0" />

                    <Button
                        android:id="@+id/run_team_b_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:onClick="addRun"
                        android:text="Run"
                        android:enabled="false"/>

                    <Button
                        android:id="@+id/out_team_b_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:onClick="addOut"
                        android:text="Out"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/out_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Out: 0"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textColor="#000000"
                android:layout_marginBottom="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="left"
                    android:text="Name" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_weight="1"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_weight="3"
                    android:layout_gravity="right"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="left"
                    android:text="Team A" />

                <TextView
                    android:id="@+id/team_a_1_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_2_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_3_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_4_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_5_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_6_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_7_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_8_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_9_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_a_total"
                    style="@style/total" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="left"
                    android:text="Team B" />

                <TextView
                    android:id="@+id/team_b_1_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_2_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_3_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_4_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_5_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_6_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_7_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_8_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_9_inning"
                    style="@style/inning" />

                <TextView
                    android:id="@+id/team_b_total"
                    style="@style/total" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="resetGame"
                    android:text="Reset" />

            </LinearLayout>
        </LinearLayout>

</ScrollView>